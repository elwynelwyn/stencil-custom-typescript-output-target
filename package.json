{
  "name": "stencil-custom-typescript-output-target",
  "version": "1.0.4",
  "description": "StencilJS output target for compiling custom TypeScript in addition to your components",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "shx rm -rf ./dist",
    "build": "tsc",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elwynelwyn/stencil-custom-typescript-output-target.git"
  },
  "keywords": [
    "stencil",
    "stenciljs",
    "output target",
    "typescript"
  ],
  "author": "Elwyn",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/elwynelwyn/stencil-custom-typescript-output-target/issues"
  },
  "homepage": "https://github.com/elwynelwyn/stencil-custom-typescript-output-target#readme",
  "devDependencies": {
    "@types/node": "^14.14.25",
    "@stencil/core": "^2.0.0",
    "prettier": "2.2.1",
    "shx": "0.3.3",
    "typescript": "4.1.3"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true
  }
}
